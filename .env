# DB2 Connection Settings
DB2_HOST=host.docker.internal
DB2_PORT=50000
DB2_DATABASE=testdb
DB2_USERNAME=db2inst1
DB2_PASSWORD=db2inst1

# Timeout Settings (in seconds) - Prevent 504 Gateway Errors
DB2_CONNECT_TIMEOUT=30    # Connection establishment timeout
DB2_QUERY_TIMEOUT=60      # Query execution timeout

# Connection Pool Settings
DB2_POOL_SIZE=5           # Number of persistent connections
DB2_MAX_OVERFLOW=10       # Additional connections when pool exhausted
DB2_POOL_RECYCLE=3600     # Recycle connections after 1 hour (seconds)
DB2_POOL_PRE_PING=true    # Test connections before using them
